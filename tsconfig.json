{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}
