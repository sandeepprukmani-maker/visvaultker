import { spawn } from "child_process";
import { Stagehand } from "@browserbasehq/stagehand";

async function fetchOAuthConfig() {
  return new Promise((resolve, reject) => {
    const pythonProcess = spawn("python", ["fetch_token.py"]);
    let output = "";
    let errorOutput = "";

    pythonProcess.stdout.on("data", (data) => (output += data.toString()));
    pythonProcess.stderr.on("data", (data) => (errorOutput += data.toString()));

    pythonProcess.on("close", (code) => {
      if (code !== 0) reject(new Error(`Python script failed: ${errorOutput}`));
      else {
        try {
          const result = JSON.parse(output.trim());
          if (result.error) reject(new Error(`OAuth error: ${result.error}`));
          else resolve(result);
        } catch {
          reject(new Error("Failed to parse OAuth response: " + output));
        }
      }
    });
  });
}

async function main() {
  console.log("Starting Stagehand with OAuth...");

  const oauthConfig = await fetchOAuthConfig();

  const stagehand = new Stagehand({
    env: "LOCAL",
    model: {
      modelName: "gpt-4-1-2025-04-14-eastus-dz",
      apiKey: oauthConfig.apiKey,
      baseURL: oauthConfig.baseURL,
    },
    verbose: 1,
    headless: false,
  });

  console.log("Initializing Stagehand...");
  await stagehand.init();

  console.log("Navigating to LinkedIn...");
  await stagehand.goto("https://www.linkedin.com");

  console.log("Clicking 'Join now' button...");
  await stagehand.act("click on the 'Join now' button");

  console.log("âœ… Clicked 'Join now'");
}

main().catch(console.error);
