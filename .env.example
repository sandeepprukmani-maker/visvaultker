# Flask Configuration
SESSION_SECRET=your-secret-key-here-change-this-in-production

# Jira Configuration (configure via Settings page in the app)
# JIRA_URL=https://your-domain.atlassian.net
# JIRA_USERNAME=your-email@example.com
# JIRA_API_TOKEN=your-jira-api-token

# OpenAI Authentication Mode
# Set to 'true' to use OAuth, or 'false' to use direct API key
USE_OAUTH_FOR_OPENAI=false

# Option 1: Direct OpenAI API Key (when USE_OAUTH_FOR_OPENAI=false)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Option 2: OAuth Configuration (when USE_OAUTH_FOR_OPENAI=true)
# These values should be provided by your IT department or OAuth provider
OAUTH_TOKEN_URL=https://your-auth-server.com/oauth/token
OAUTH_CLIENT_ID=your-client-id-here
OAUTH_CLIENT_SECRET=your-client-secret-here
OAUTH_GRANT_TYPE=client_credentials
OAUTH_SCOPE=openai.api.read openai.api.write

# Optional: Custom OpenAI Gateway/Proxy Base URL
# Only needed if using a custom gateway or proxy in front of OpenAI
# GPT_BASE_URL=https://your-gateway.com/v1
