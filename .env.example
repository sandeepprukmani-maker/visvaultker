# VisionVault Environment Variables
# Copy this file to .env and configure your authentication method

# ============================================
# AUTHENTICATION MODE
# ============================================
# Set to "oauth" to use OAuth with custom gateway, or "standard" to use direct API keys
AUTH_MODE=standard

# ============================================
# STANDARD MODE - Direct API Keys
# ============================================
# Use when AUTH_MODE=standard
# Provide API keys for the services you want to use

OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key-here

# ============================================
# OAUTH MODE - Custom Gateway Configuration
# ============================================
# Use when AUTH_MODE=oauth
# Configure OAuth authentication for custom AI gateway

# OAuth token endpoint URL
OAUTH_TOKEN_URL=https://your-org-oauth-server.com/token

# OAuth client credentials
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret

# OAuth grant type (typically "client_credentials")
OAUTH_GRANT_TYPE=client_credentials

# OAuth scope (as specified by your organization)
OAUTH_SCOPE=your_required_scope

# AI Gateway base URL (OpenAI-compatible endpoint)
GW_BASE_URL=https://your-org-ai-gateway.com/v1

# Optional: Path to CA certificate (PEM file) for custom SSL/TLS certificates
# CA_CERT_PATH=/path/to/your/certificate.pem

# ============================================
# APPLICATION SETTINGS
# ============================================
# Session secret for cookie encryption
SESSION_SECRET=change-this-to-a-random-secret-in-production

# Node environment
NODE_ENV=development

# Database URL (automatically provided by Replit if using built-in PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database
