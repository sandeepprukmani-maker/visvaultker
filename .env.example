# ============================================================================
# OAUTH CONFIGURATION (REQUIRED FOR AI FEATURES)
# ============================================================================
OAUTH_TOKEN_URL=https://your-oauth-provider.com/oauth/token
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here
OAUTH_GRANT_TYPE=client_credentials
OAUTH_SCOPE=your_required_scope
GW_BASE_URL=https://your-gateway-endpoint.com/v1

# ============================================================================
# SECURE CREDENTIAL MANAGEMENT
# Credentials for automated logins - KEPT HIDDEN FROM AI MODELS
# ============================================================================

# SMARH Login Credentials
# Used when you say "login to smarh" or similar
SMARH_USERNAME=your_smarh_username
SMARH_PASSWORD=your_smarh_password

# Generic Login Credentials (fallback for other sites)
# Used when you say "login" without specifying a service
AUTO_USERNAME=your_default_username
AUTO_PASSWORD=your_default_password

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
SESSION_SECRET=your_secret_key_here
DATABASE_URL=postgresql://user:password@localhost/dbname
CORS_ALLOWED_ORIGINS=*

# ============================================================================
# PRIVACY SETTINGS (IMPORTANT)
# ============================================================================
ANONYMIZED_TELEMETRY=false
BROWSER_USE_CLOUD_SYNC=false