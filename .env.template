# AI Browser Automation - Environment Variables Template
# Copy this file to .env and fill in your values

# ========================================
# OAuth Configuration (Required for AI Features)
# ========================================
OAUTH_TOKEN_URL=your_oauth_token_url_here
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here
OAUTH_GRANT_TYPE=client_credentials
OAUTH_SCOPE=your_scope_here
GW_BASE_URL=your_gateway_base_url_here

# ========================================
# Security Configuration
# ========================================
# Flask session secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET=

# API key for securing API endpoints (optional for development)
API_KEY=

# ========================================
# CORS Configuration
# ========================================
# Comma-separated list of allowed origins (default: *)
CORS_ALLOWED_ORIGINS=*

# ========================================
# Privacy Settings (Default: false - no external data transmission)
# ========================================
ANONYMIZED_TELEMETRY=false
BROWSER_USE_CLOUD_SYNC=false
